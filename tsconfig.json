{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*" : ["app/*"],
      "@config/*" : ["config/*"],
      "@db/*" : ["db/*"],
      "@type/*" : ["types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/tests"]
}
